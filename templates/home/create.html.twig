{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <br><br><br><br><br><br><br><br><br>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-md-center">
                    <div class="col-md-12 text-center">
                        <h4>Blog Oluştur</h4>
                    </div>
                </div>
                <form action="" method="POST">
                    <div class="row justify-content-md-center">
                        <div class="col-md-12">
                            <label for="title">Başlık</label>
                            <input class="form-control" type="text" name="title" placeholder="Başlık" id="title">
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-md-12">
                            <label for="content">İçerik</label>
                            <textarea name="content" id="content" cols="30" rows="5" class="form-control" placeholder="İstediğin Ürün Detayı"></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-md-4">
                            <label for="category">Kategori</label>
                            <select class="form-control" name="category" id="category">
                                <option value="">Seçiniz</option>
                                {% for categor in category %}
                                    <option value="{{ categor.id }}">{{ categor.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="status">Ürün</label>
                            <select class="form-control" name="product" id="product">
                                <option value="">Seçiniz</option>
                                {% for prod in product %}
                                    <option value="{{ prod.id }}">{{ prod.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="ageBetween">İstenilen Fiyat</label>
                            <select class="form-control" name="price" id="price">
                                <option value="">Seçiniz</option>
                                {% for pric in price %}
                                    <option value="{{ pric.id }}">{{ pric.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-md-center">
                        <div class="col-md-12">
                            <button class="btn btn-success btn-block" type="submit">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
